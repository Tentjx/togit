<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tab_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="4" >

        <LinearLayout
            android:id="@+id/singer_tab_linear"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/singer_tab_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tab_artists" />

            <TextView
                android:id="@+id/group_singer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="艺术家" />

            <ImageView
                android:id="@+id/singer_tab_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/nowplaying_seekbar_progress_h" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/divier_line" />

        <LinearLayout
            android:id="@+id/special_tab_linear"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tab_albums" />

            <TextView
                android:id="@+id/group_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所有音乐" />

            <ImageView
                android:id="@+id/special_tab_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nowplaying_seekbar_progress_h" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/divier_line" />

        <LinearLayout
            android:id="@+id/music_tab_linear"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tab_songs" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的最爱" />

            <ImageView
                android:id="@+id/music_tab_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nowplaying_seekbar_progress_h" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/divier_line" />

        <LinearLayout
            android:id="@+id/list_tab_linear"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tab_playlists" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在播放" />

            <ImageView
                android:id="@+id/list_tab_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nowplaying_seekbar_progress_h" />

        </LinearLayout>

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        </android.support.v4.view.ViewPager>

</LinearLayout>